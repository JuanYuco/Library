@using Library.Web.Models.DTOs.Author

@model AuthorDTO
@{
}

<div class="w-100 d-flex flex-column">
    <h4 class="align-self-center">Crear Autor</h4>
    <form asp-action="Create" method="post" class="d-flex flex-column col-6 col-md-6 align-self-center">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="form-group w-100">
            <label asp-for="FullName">Nombre Completo:</label>
            <input asp-for="FullName" class="form-control" placeholder="nombre" type="text"/>
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div class="form-group w-100 mt-2">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" class="form-control" placeholder="Correo Eléctronico" type="email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group w-100 mt-2">
            <label asp-for="BirthDate">Fecha de nacimiento:</label>
            <input asp-for="BirthDate" class="form-control" placeholder="Correo Eléctronico" type="date" />
            <span asp-validation-for="BirthDate" class="text-danger"></span>
        </div>
        <div class="form-group w-100 mt-2">
            <label asp-for="BornCity">Ciudad Natal:</label>
            <input asp-for="BornCity" class="form-control" placeholder="Correo Eléctronico" type="text" />
            <span asp-validation-for="BornCity" class="text-danger"></span>
        </div>
        <button class="btn btn-primary w-100 mt-2" type="submit">Guardar</button>
        <a asp-action="Index" class="btn btn-primary w-100 mt-2">Volver</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

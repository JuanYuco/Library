@using Library.Web.Models.ViewModels.Book

@model IndexViewModel
@{
    ViewData["Title"] = "Libros";
}

<div class="d-flex flex-column justify-content-center">
    <h4 class="align-self-center">Libros</h4>
    @if (TempData["userMessage"] != null)
    {
        <label class="text-bg-success">@TempData["userMessage"]</label>
    }

    @if (TempData["errorMessage"] != null)
    {
        <label class="text-bg-danger">@TempData["errorMessage"]</label>
    }

    <a asp-action="Create" class="btn btn-primary w-25 mb-1">Crear libro</a>
    <table class="table">
        <thead>
            <tr>
                <th>Título</th>
                <th>Año</th>
                <th>Género</th>
                <th>Páginas</th>
                <th>Autor</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Books.Count > 0)
            {
                foreach (var book in Model.Books)
                {
                    <tr>
                        <td>@book.Title</td>
                        <td>@book.Year.ToString()</td>
                        <td>@book.Gender</td>
                        <td>@book.PagesNumber</td>
                        <td>@book.Author</td>
                        <td>
                            <form asp-action="Delete" asp-route-id="@book.Id" method="post">
                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                    Eliminar
                                </button>
                            </form>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>

@using Library.Web.Models.DTOs.Book

@model BookDTO
@{
}

<div class="w-100 d-flex flex-column">
    <h4 class="align-self-center">Crear Libro</h4>
    @if (TempData["errorMessage"] != null)
    {
        <label class="text-bg-danger">@TempData["errorMessage"]</label>
    }
    <form asp-action="Create" method="post" class="d-flex flex-column col-6 col-md-6 align-self-center">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
        <div class="form-group w-100">
            <label asp-for="Title">Título:</label>
            <input asp-for="Title" class="form-control" placeholder="Título" type="text" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group w-100 mt-2">
            <label asp-for="Year">Año:</label>
            <input asp-for="Year" class="form-control" placeholder="1998" type="number" />
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>
        <div class="form-group w-100 mt-2">
            <label asp-for="Gender">Género:</label>
            <input asp-for="Gender" class="form-control" placeholder="Acción" type="text" />
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>
        <div class="form-group w-100 mt-2">
            <label asp-for="PagesNumber">Número de páginas:</label>
            <input asp-for="PagesNumber" class="form-control" placeholder="500" type="number" />
            <span asp-validation-for="PagesNumber" class="text-danger"></span>
        </div>
        <div class="form-group w-100 mt-2">
            <label asp-for="AuthorId">Autor:</label>
            <select asp-for="AuthorId" class="form-control" asp-items="@(ViewBag.Authors as SelectList)">
                <option value="">Seleccione un autor</option>
            </select>
            <span asp-validation-for="AuthorId" class="text-danger"></span>
        </div>
        <button class="btn btn-primary w-100 mt-2" type="submit">Guardar</button>
        <a asp-action="Index" class="btn btn-primary w-100 mt-2">Volver</a>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
